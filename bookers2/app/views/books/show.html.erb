<%= render 'users/userinfo', user: @user %>
<%= render 'newbook', newbook: @newbook %>

<h3>Book detail</h3>
<%= image_tag 'no_image', alt: 'Example Image', class: 'img-thumbnail' %>
<%= link_to @user.name, user_path %>
<%= link_to @book.title, book_path(@book.id) %>
<%= @book.opinion %>
<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>