<h3>User info</h3>
<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>

<p>name: <%= @user.name %></p>
<p>introduction: <%= @user.introduction %></p>
<%= link_to "Edit", edit_user_path %>

<h3>New book</h3>
<%= form_with model: @newbook do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :opinion %>

  <%= f.submit '投稿' %>
<% end %>

<h3>Book detail</h3>
<%= image_tag 'no_image', alt: 'Example Image', class: 'img-thumbnail' %>
<%= link_to @user.name, user_path %>
<%= link_to @book.title, book_path(@book.id) %>
<%= @book.opinion %>
<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>