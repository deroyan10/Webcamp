<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'newbook', newbook: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>picture</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= image_tag 'no_image', alt: 'Example Image', class: 'img-thumbnail' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.opinion %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>