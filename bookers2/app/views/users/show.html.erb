<%= render 'userinfo', user: @user %>
<%= render 'books/newbook', newbook: @newbook %>

<h3>Books</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>picture</th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= image_tag 'no_image', alt: 'Example Image', class: 'img-thumbnail' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
    </tbody>
  <% end %>
</table>