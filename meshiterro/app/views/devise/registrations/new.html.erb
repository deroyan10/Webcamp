<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ユーザ登録</h5>
      <div class="form-body p-4">

        <div class="mx-auto text-center">
          <p>ユーザー名,Email,パスワードを入力してください。</p>
          </div>

        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <!--<% if @minimum_password_length %>-->
            <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
            <!--<% end %><br />-->
            <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "新しいパスワード" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "新しいパスワード" %>
          </div>

          <%= f.submit "登録", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>

